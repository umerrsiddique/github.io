<View controllerName="vendorregistration.view.details"  xmlns:table="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout" xmlns="sap.m" xmlns:f="sap.ui.layout.form"  xmlns:core="sap.ui.core">
	<Page title="Vendor Registration">
		<content>
	 <VBox class="sapUiSmallMargin">
		<f:Form id="FormChange354"
			editable="true">	
			<f:toolbar>
				<Toolbar id="TB1">
					<Title  text="Address" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://refresh" press="refreshAddress"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanL="4"
					labelSpanM="1"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="4"
					columnsM="4" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
					<f:FormElement label="Tile">
							<f:fields>
								<Select   id="title" selectedKey="Mr.">
									<items>
										<core:Item text="Mr." key="mr"/>
										<core:Item text="Mrs" key="mrs"/>
									</items>
								</Select>
							</f:fields>
						</f:FormElement>
						
						<f:FormElement  label="Name">
							<f:fields>
							<VBox>
								<Input  id="name" required="true" maxLength="35"/>
							</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Address">
							<f:fields>
								<Input id="address" required="true" maxLength="40"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Country" >
							<f:fields>
								<Input
								id="country"
								type="Text"
								required="true"
								textFormatMode="KeyValue"
								showSuggestion="true"
								showValueHelp="true"
								valueHelpRequest="handleValueHelpCountry"
								suggestionItems="{f4help>/bnkcountry}"
								suggestionItemSelected="suggestionItemSelectedCountry">
								<suggestionItems>
									<core:ListItem key="{f4help>land1}" text="{f4help>landx50}"  />
								</suggestionItems>
							</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="City">
							<f:fields>
								<Input id="city" required="true" maxLength="35"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Postal Code">
							<f:fields >
								<Input  id="postalcode" required="true" maxLength="10"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Language" >
							<f:fields>
								<Input
								id="language"
								type="Text"
								required="true"
								textFormatMode="KeyValue"
								showSuggestion="true"
								showValueHelp="true"
								valueHelpRequest="handleValueHelpLanguage"
								suggestionItems="{f4help>/lang}"
								suggestionItemSelected="suggestionItemSelectedLanguage"
								selectedKey="">
								<suggestionItems>
									<core:ListItem key="{f4help>sptxt}" text="{f4help>sptxt}"  />
								</suggestionItems>
							</Input>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
	 <VBox class="sapUiSmallMargin">
		<f:Form id="FormChange3546"
			editable="true">
			<f:toolbar>
				<Toolbar id="TB2">
					<Title  text="Contact" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://refresh"  press="refreshContact"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanL="1"
					labelSpanM="1"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="4"
					columnsM="4" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>						
						<f:FormElement label="Mobile No.">
							<f:fields>
								<Input  id="mobileno" type="Tel" required="true" maxLength="30"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Phone No.">
							<f:fields>
								<Input id="phoneno" type="Tel" required="true" maxLength="30"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Fax No.">
							<f:fields>
								<Input id="faxno" required="true" maxLength="31"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Email">
							<f:fields>
								<Input id="email" type="Email" required="true" maxLength="241"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
	 <VBox class="sapUiSmallMargin">
		<f:Form id="FormChange3547"
			editable="true">
			<f:toolbar>
				<Toolbar id="TB3">
					<Title  text="Bank" level="H4" titleStyle="H4"/>
					<ToolbarSpacer />
					<Button icon="sap-icon://refresh" press="refreshBank"/>
				</Toolbar>
			</f:toolbar>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanL="6"
					labelSpanM="1"
					emptySpanL="1"
					emptySpanM="1"
					columnsL="4"
					columnsM="4" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>
						<f:FormElement label="Country">
							<f:fields>
							<VBox>
								<Input
								id="bankcountry"
								type="Text"
								required="true"
								textFormatMode="KeyValue"
								showSuggestion="true"
								showValueHelp="true"
								valueHelpRequest="handleValueHelpCountry"
								suggestionItems="{f4help>/bnkcountry}"
								suggestionItemSelected="suggestionItemSelectedCountry">
								<suggestionItems>
									<core:ListItem key="{f4help>land1}" text="{f4help>landx50}"  />
								</suggestionItems>
							</Input>
							</VBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Bank Key">
							<f:fields>
								<Input
								id="bankkey"
								required="true"
								type="Text"
								textFormatMode="KeyValue"
								showSuggestion="true"
								showValueHelp="true"
								valueHelpRequest="handleValueHelpBankKey"
								suggestionItems="{f4help>/bnkkey}"
								suggestionItemSelected="suggestionItemSelectedBankKey">
								<suggestionItems>
									<core:ListItem key="{f4help>bankl}" text="{f4help>banka}"  />
								</suggestionItems>
							</Input>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Account No.">
							<f:fields>
								<Input id="accountno" required="true" maxLength="18"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="IBAN">
							<f:fields>
								<Input  id="iban" required="true" maxLength="34"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Acc. Title">
							<f:fields>
								<Input  id="holdername" required="true" maxLength="60"/>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="Tax Number">
							<f:fields>
								<Input  id="taxno" required="true" maxLength="16"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>

	</VBox>
	<List headerText="Attachments" mode="Delete" delete="handleDelete" items="{path: 'attachments>/'}" noDataText="No Files Found" >
	<headerToolbar>
	<Toolbar>
			<Label id="attachmentsheader" text="Attachments" design="Bold"/>
			<ToolbarSpacer/>
			<Button text="Add Attachment" icon="sap-icon://attachment" type="Emphasized" press="OnAttachment"/>
	</Toolbar>
	</headerToolbar>
		<CustomListItem>
			<HBox>
				<core:Icon size="2rem" src="{parts : [{path : 'attachments>mimetype'}], formatter : 'vendorregistration.util.Formatter.formatAttachmentIcon'}" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" />
				<VBox  class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
					<Link text="{attachments>filename}"  />
					<Label text="Uploaded By : You"/>
					<Label text="Uploaded On : {attachments>date}"/>
					<Label text="File Size : {attachments>filezise} KB"/>
				</VBox>
			</HBox>
		</CustomListItem>
	</List>
		</content>
		<footer>
			<Toolbar>
			<ToolbarSpacer/>
			<Button text="Save" icon="sap-icon://save" press="onSave" type="Emphasized" width="7rem"/>
			<ToolbarSpacer/>
				
			</Toolbar>
		</footer>
	</Page>
</View>
